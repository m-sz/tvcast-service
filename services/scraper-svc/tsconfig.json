{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    /* Module Resolution Options */
    "moduleResolution": "node"
  }
}
